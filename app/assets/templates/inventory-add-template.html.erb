<div class="col-md-12">
    <div class="content">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="remove-margin">Inventory Items</h4>
            </div>
            <div class="panel-body">
                <div class="form-info">
                   <div class="row">
                       <div class="col-md-12 form-inline">
                            <div class="row">
                                <div class="col-md-6">
                                   <span style="margin-right: 20px;">Select category for items to be added</span>
                                   <select class="form-control" id="inventory-category" style="margin-top:15px;" ng-model="inventoryData.category_id">
