                                            <input type="text" class="form-control" ng-model="inventoryData.product_name">
                                        </div>
                                        <div class="col-md-4">
                                            <label>Quantity</label>
                                            <input type="number" class="form-control" ng-model="inventoryData.quantity">
                                        </div>
                                        <div class="col-md-4 remove-padding-right">
                                            <label>Price</label>
                                            <input type="number" class="form-control" ng-model="inventoryData.price">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group overflow">
                                            <label>Type</label>
                                            <div class="col-md-12">
                                                <div class="radio inline-block">
                                                    <label style="margin-right: 20px;">
                                                        <input name="category" type="radio" ng-model="inventoryData" ng-init="inventoryData == 'Wholesale'">
                                                        Wholesale
                                                    </label>
                                                </div>
                                                <div class="radio inline-block">
                                                    <label>
                                                        <input name="category" type="radio" ng-model="inventoryData" ng-init="inventoryData == 'Retail'">
