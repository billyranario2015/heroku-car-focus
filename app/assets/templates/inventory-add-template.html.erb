                                            <thead>
                                                <tr>
                                                    <th>Product Name</th>
                                                    <th>Quantity</th>
                                                    <th>Price</th>
                                                    <th>Type</th>
                                                    <th>Total</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>Spracket</td>
                                                    <td>3</td>
                                                    <td>32.00</td>
                                                    <td>Wholesale</td>
                                                    <td>96.00</td>
                                                    <td>
                                                        <a href="#"><label class="label label-primary"><i class="fa fa-edit"></i> Edit</label></a>
                                                        <a href="#"><label class="label label-danger"><i class="fa fa-trash"></i> Remove</label></a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <hr>
                                    <div class="form-action overflow">
                                        <div class="btn-button pull-right">
                                            <button class="btn btn-success">Save</button>
                                        </div>
                                        <div class="btn-button pull-left" style="font-size:24px;">
                                            <label>Total:</label>
