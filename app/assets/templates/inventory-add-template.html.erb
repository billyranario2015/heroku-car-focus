                                       <option ng-repeat="list in categoryList" value="{{list.category_name}}">{{list.category_name}}</option>
                                   </select>
                                </div>

                                <div class="col-md-6">
                                    <div class="text-right">
                                        <h6>Date of Transaction: <span class="text-primary"><%= DateTime.now.strftime('%B %d, %Y') %></span></h6>
                                    </div>
                                </div>
                            </div>
                       </div>
                   </div>
                   <div class="form-categories">
