<script type="text/javascript">
    $( document ).ready( function( ) {
        $( "#inventory-category" ).change(function () {
            var status = "";
            
            $( "select option:selected" ).each(function() {
              status = $( this ).val();
              console.log(status);

            });
            
            if ( status === "On Stock" ) {
                $( '.form-wrapper' ).css( 'display','none' );
                $( '.form-' + status ).show();
            } else if( status === 'direct-purchase' ){
                $( '.form-wrapper' ).css( 'display','none' );
                $( '.form-' + status ).show();
            } else if( status === 'product-order' ){
                $( '.form-wrapper' ).css( 'display','none' );
                $( '.form-' + status ).show();
            } else{
                $( '.form-wrapper' ).css( 'display','none' );
            };          

        }).change();


    } );
</script>